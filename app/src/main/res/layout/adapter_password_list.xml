<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.hiloislay.passmanagerkt.viewmodel.PasswordListViewModel.PasswordAdapterViewModel" />
    </data>
    <com.hiloislay.passmanagerkt.view.adapter.PasswordAdapterView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/passwordTitleText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listHeight"
            android:layout_margin="@dimen/marginShort"
            android:gravity="center_vertical|start"
            android:textSize="20sp"
            android:text="@{viewModel.name}"
            />

    </com.hiloislay.passmanagerkt.view.adapter.PasswordAdapterView>
</layout>
